<h2 class = "form_heading">Sign up form</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :Name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :photo %><br />
    <%= f.text_field :Photo, autofocus: true, autocomplete: "photo", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :Bio, autofocus: true, autocomplete: "bio", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label 'Role (admin or author)' %><br />
    <%= f.text_field :role, autofocus: true, autocomplete: "role", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: "reg-log-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
